{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {},
    "functions": [],
    "variables": {
        "location": "[resourceGroup().location]",
        "storageName": "[concat('batch-storage-', uniqueString(resourceGroup().id))]",
        "batchServiceName": "[concat('batch-account-', uniqueString(resourceGroup().id))]",
        "acrName": "[concat('batch-acr-', uniqueString(resourceGroup().id))]"
    },
    "resources": [
        {
            "name": "[variables('batchServiceName')]",
            "type": "Microsoft.Batch/batchAccounts",
            "apiVersion": "2020-03-01",
            "location": "[variables('location')]",
            "tags": {},
            "properties": {
                "poolAllocationMode": "BatchService",
                "publicNetworkAccess": "Enabled",
                "encryption": {
                    "keySource": "Microsoft.Batch"
                }
            },
            "resources": []
        },
        {
            "type": "Microsoft.ContainerRegistry/registries",
            "apiVersion": "2019-12-01-preview",
            "name": "[variables('acrName')]",
            "location": "[variables('location')]",
            "sku": {
                "name": "Standard",
                "tier": "Standard"
            },
            "properties": {
                "adminUserEnabled": true,
                "encryption": { "status": "disabled" },
                "dataEndpointEnabled": false,
                "publicNetworkAccess": "Enabled"
            }
        },
        {
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2019-06-01",
            "name": "[variables('storageName')]",
            "location": "[variables('location')]",
            "sku": {
                "name": "Standard_RAGRS",
                "tier": "Standard"
            },
            "kind": "StorageV2",
            "properties": {
                "networkAcls": {
                    "bypass": "AzureServices",
                    "virtualNetworkRules": [],
                    "ipRules": [],
                    "defaultAction": "Allow"
                },
                "supportsHttpsTrafficOnly": true,
                "encryption": {
                    "services": {
                        "file": {
                            "keyType": "Account",
                            "enabled": true
                        },
                        "blob": {
                            "keyType": "Account",
                            "enabled": true
                        }
                    },
                    "keySource": "Microsoft.Storage"
                },
                "accessTier": "Hot"
            },
            "resources": [
                {
                    "type": "blobServices/containers",
                    "apiVersion": "2019-06-01",
                    "name": "default/titanic",
                    "dependsOn": [
                        "[variables('storageName')]"
                    ]
                }
            ]
        }
    ],
    "outputs": {}
}
